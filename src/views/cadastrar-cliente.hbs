                                <div class="form-group">
                                    <label for="complemento">Complemento </label>
                                    <input type="text" class="form-control" id="complemento" name="complemento" style="max-width: 75%;"
                                        placeholder="Complemento">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="telFixo">Telefone Fixo </label>
                                    <input type="text" class="form-control" id="telFixo" name="telFixo" style="max-width: 50%;"
                                        placeholder="Telefone Fixo">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="celular">Celular </label>
                                    <input type="text" class="form-control" id="celular" name="celular" style="max-width: 50%;"
