<!DOCTYPE html>
<html lang="pt-br">

<head>
    {{> header}}
</head>

<body class="{{template}}">
    <div class="wrapper">
        {{> asside-nav-bar-adm}}
        {{> top-nav-bar}}
        {{{ body }}}
        {{> footer}}
    </div>
    <script src="/plugins/jquery/jquery.min.js"></script>
    <script src="/js/cadastros/cadastros.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"></script>
    <!--FireBase Login-->
    <script src="/js/demo.js"></script>
    <!--JsMask-->
    <script src="\plugins\jQuery-Mask-Plugin-master\dist\jquery.mask.min.js"></script>
    <!--Data Tables-->
    <script type="text/javascript" charset="utf8" src="/plugins/DataTables4/datatables.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.0/dist/sweetalert2.all.min.js"></script>
    <!--DataPicker-->
    <script src="\plugins\bootstrap-datapicker\js\bootstrap-datepicker.min.js"></script>
    <script src="\plugins\bootstrap-datapicker\js\bootstrap-datepicker.pt-BR.min.js"></script>


    <!--Listar Clientes-->
    <script src="/js/listagem/clientes.js"></script>
    <!--CEP-->
    <script src="/js/cep/autopreenchimento.js"></script>
    <script>
        $(function () {

           

            $('.cpf').mask('000.000.000-00', {
                placeholder: "000.000.000-00",
                reverse: true
            });
            $('.cep').mask('00000-000', {
                placeholder: "00000-000",
                reverse: true
            });
            $('.cnpj').mask('00.000.000/0000-00', {
                placeholder: "00.000.000/0000-00"
            });
            $('#data').mask('00/00/0000');
            $('#data').datepicker({
                format: 'dd-mm-yyyy',
                language: "pt-BR",
                orientation: 'bottom'               
                
            });


        });

    </script>
</body>

</html>